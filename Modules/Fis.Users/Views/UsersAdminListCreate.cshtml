@model OrchardCore.Users.ViewModels.UserIndexOptions
@using Fis.Users.Models
@using OrchardCore.Users.Models;
@using OrchardCore.Users.ViewModels;
@inject IAuthorizationService AuthorizationService

@if (await AuthorizationService.AuthorizeAsync(User, CommonPermissions.EditUsers, new User()))
{
    <a asp-route-action="Create" class="btn btn-secondary create" role="button">@T["Add User"]</a>
}
